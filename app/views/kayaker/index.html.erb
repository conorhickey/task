

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Kayaker</h1>

<% @gears.each do |gear| %>
  <div class="entry">


	<%= image_tag(gear.image) %>
    <h3><%= gear.owner %></h3>
    <h5><%= sanitize gear.category %></h5>
    <h5><%= sanitize gear.brand %> <%= sanitize gear.model %></h5>
    <h5><%= sanitize gear.size %></h5>	
      <h5><%= link_to 'More details', gear %></h5>	

  </div>
<% end %>
